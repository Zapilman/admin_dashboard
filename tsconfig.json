{
  "include": ["_core/**/*", "custom.d.ts", "app/**/*", "_ui/**/*"],
  "exclude": ["./dist/", "node_modules", "i18n"],
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "_core/*": ["./_core/*"],
      "_ui/*": ["./_ui/*"],
      "_store/*": ["./_store/*"]
    }
  }
}
